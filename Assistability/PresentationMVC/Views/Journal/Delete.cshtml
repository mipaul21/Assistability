@model DataStorageModels.Journal

@{
    ViewBag.Title = "Delete " + Model.JournalName;
}

<h2>@ViewBag.Title</h2>

<div>
    <h4>Journal</h4>
    <hr />
    <dl class="dl-horizontal" style="display:inline-block">
        <dt>
            @Html.DisplayNameFor(model => model.JournalName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JournalName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JournalDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JournalDescription)
        </dd>
    </dl>
</div>
<div>
    <h2>Are you sure you want to delete this journal?</h2>
    @using (Html.BeginForm("DeleteJournal", "Journal", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("delete", true)
        @Html.Hidden("journalName", Model.JournalName)
        <input type="submit" value="yes" class="btn btn-default" />
    }
    @using (Html.BeginForm("DeleteJournal", "Journal", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("delete", false)
        @Html.Hidden("journalName", Model.JournalName)
        <input type="submit" value="no" class="btn btn-default" />
    }
</div>
