@model IEnumerable<DataStorageModels.Routine>

@{
    ViewBag.Title = "Routines";
}

<h2>Routines</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style="width:90%;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Active)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { Name = item.Name }) |
            @if (User.IsInRole("Admin"))
            {
                @Html.ActionLink("Edit |", "Edit", new { Name = item.Name }); 

                
            } 
              @Html.ActionLink("Routines Steps", "RoutineSteps", new { Name = item.Name })
        </td>
    </tr>
}

</table>
